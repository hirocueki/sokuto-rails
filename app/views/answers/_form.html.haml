= form_with(model: [user, question, answer], local: true) do |form|
  - if answer.errors.any?
    #error_explanation.alert.alert-danger
      %ul
        - item.errors.full_messages.each do |message|
          %li #{message}

  .field
    = form.text_area :context, id: :answer_body, placeholder: "回答", class: 'form-control'
  .actions.text-right
    = form.submit (yield :submit_label), class: 'btn btn-primary mt-1'
