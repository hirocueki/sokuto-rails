= search_form_for @q do |f|
  .field
    = f.label :name_cont, '名前'
    = f.search_field :name_cont, class: 'form-control'
  .actions
    = f.submit '絞り込む', class: 'btn btn-primary mt-1'
    - if @q.conditions.present?
      = link_to '解除', users_path, class: 'btn btn-danger mt-1'

%ul.list-group
  - @users.each do |user|
    %li.list-group-item
      = link_to user_path(user) do
        = image_tag InitialAvatar.avatar_data_uri(user.name.first), class: 'avatar'
        = user.name

= paginate @users
