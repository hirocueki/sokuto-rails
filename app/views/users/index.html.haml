= search_form_for @query do |f|
  .field
    = f.label :name_cont, '名前'
    = f.search_field :name_cont, class: 'form-control'
  .actions
    = f.submit '絞り込む', class: 'btn btn-primary mt-1'
    - if @query.conditions.present?
      = link_to '解除', users_path, class: 'btn btn-danger mt-1'

%ul.list-group.users-list
  - @users.each do |user|
    %li.list-group-item.user
      = link_to user_path(user) do
        = avatar_image user, class: 'avatar'
        = user.name

= paginate @users
