%h1=@question.title

= render "shared/tag_list", tags: @question.tag_list

.container.mt-2
  .row
    .voting.pr-15
      = render 'vote', question: @question
    .col
      .content=@question.content

  - if current_user == @question.user
    = link_to '編集', edit_loggedin_question_path(@question)
    \|
    = link_to '削除',
         loggedin_question_path(@question),
         method: :delete, data: { confirm: 'よろしいですか？' }
    \|
  %hr
  = render 'answers/answer_list', question: @question

  - if user_signed_in?
    = render template: 'loggedin/answers/new'
  %hr
  = link_to '質問一覧', questions_path

