= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message
  .field
    = f.text_field :title, placeholder: "質問のタイトル", class: 'form-control'
  .field.mt-1
    = f.text_field :tag_list, placeholder: "タグ", class: 'form-control'
  .field
    = f.text_area :content, placeholder: "質問の内容", class: 'form-control'

  .actions
    = f.submit 'Save'
