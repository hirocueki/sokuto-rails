.row
  .col-5
    %h3 上位の質問
  - if user_signed_in?
    .col-2
      = link_to "質問する", new_loggedin_question_path, class: "btn btn-primary"
%hr
  %ul.nav.nav-tabs{ role: "tab_list" }
    %li.nav-item{ role: "presentation" }
      = link_to '人気', homes_path(order: 'popular'), class: "nav-link #{active('popular')}"
    %li.nav-item{ role: "presentation" }
      = link_to '今週', homes_path(filter: 'in_week'), class: "nav-link #{active('in_week')}"
    %li.nav-item{ role: "presentation" }
      = link_to '今月', homes_path(filter: 'in_month'), class: "nav-link #{active('in_month')}"

  .tab-content
    .tab-pane.active{ role: "tab_panel" }
      %p
        = render @questions
  = paginate @questions
